<h1>
  <%= @task.title %>
</h1>
<div>
  <%= @task.content %>
</div>
<div>
  期限:<%= @task.deadline %>
</div>
<div>
  担当者:<%= @task.user.name %>
</div>
<div>
  ステータス:<%= @task.status %>
</div>
<%= link_to 'Edit', edit_task_path(@task), class: "btn btn-primary text-white mt-3 me-2" %>
<%= link_to 'Back', tasks_path, class: "btn btn-outline-dark mt-3 me-2" %>
<%= link_to 'アサイン', assign_task_path, class: "btn btn-success mt-3" %>
