<div class="container">
  <h1 class="my-3">タスク一覧</h1>

  <div id="new-task-link">
    <%= link_to '新規タスクを作成する', new_task_path, class: "btn btn-success" %>
  </div>

  <div class="row justify-content-between">
    <% @tasks.each do |task| %>
      <div class="col-xs-12 col-md-5 task-panel">
        <h2><%= task.title %></h2>
        <p><%= task.content %></p>
        <p>期限：<%= task.deadline.to_date.strftime("%Y年 %m月 %d日") %></p>
        <p>担当者：<%= task.user.name %></p>
        <p>ステータス：<%= task.status %></p>
        <div class="blog-links">
          <%= link_to 'Show', task, class: 'btn btn-outline-dark' %>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-info' %> |
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      </div>
    <% end %>
    <%= paginate @tasks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
