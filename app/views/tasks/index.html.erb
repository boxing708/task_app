<h1>ログインユーザー</h1>
<p>現在 <%= current_user.name %> がログインしています</p>
<p>メール：<%= current_user.email %></p>
<%= image_tag(current_user.icon, size: '300x200') if current_user.icon.attached? %><br />
<%= link_to "ログアウト", destroy_user_session_path, method: :delete %><br>
<%= link_to "プロフィール編集", edit_user_registration_path %>


<div class="container">
  <h1>タスク一覧</h1>
  
  <div id="new-task-link">
    <%= link_to '新規タスクを作成する', new_task_path %>
  </div>

  <div class="row justify-content-between">
    <% @tasks.each do |task| %>
      <div class="col-xs-12 col-md-5 task-panel">
        <h2><%= task.title %></h2>
        <p><%= task.content %></p>
        <p><%= task.status %></p>
        <p><%= task.deadline %></p>
        <div class="blog-links">
          <%= link_to 'Show', task, class: 'btn btn-default' %>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-info' %> |
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
