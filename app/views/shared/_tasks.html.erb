<div class="container">
  <div class="d-md-flex align-items-center">
    <h1 class="my-3 me-auto"><%= title %></h1>
    <% if title == "タスク一覧" %>
      <div class="me-3">
        <%= search_form_for @q, url: search_tasks_path do |f| %>
        <%= f.label :title_cont, 'タイトル名' %>
        <%= f.search_field :title_cont %>
        <%= f.submit '検索' %>
        <% end %>
      </div>
      <%= link_to "完了タスク一覧", complete_tasks_path, class: "my-3 btn btn-outline-dark" %>
    <% else %>
      <%= link_to "完了マイタスク一覧", complete_mytasks_path, class: "my-3 btn btn-outline-dark" %>
    <% end %>
  </div>

  <div id="new-task-link" class=" d-flex">
    <%= link_to new_task_path, class: "btn btn-outline-dark align-self-start me-auto" do %>
      <i class="fa-solid fa-plus"></i> 新規タスクを作成する
    <% end %>
    <% if title == "マイタスク" %>
      <div class="flex-column mt-2">
        <p class="m-0">進捗：<%= current_user.tasks.count - incomplete_tasks.count %>/<%= current_user.tasks.count %></p>
        <p>残り：<%= incomplete_tasks.count %></p>
      </div>
    <% end %>
  </div>

  <div class="row justify-content-between">
    <% incomplete_tasks.each do |task| %>
      <div class="col-xs-12 col-md-5 px-0 task-panel border rounded <%=  Date.today > task.deadline ? "border-danger" : "border-success" %>">
        <div class="text-break">
          <h3 class="text-white p-3 <%= Date.today > task.deadline ? "bg-danger" : "bg-success" %>"><%= task.title %></h3>
        </div>
        <div class="p-3">
          <p class="text-break">内容：<%= task.content %></p>
          <p>期限：<%= task.deadline.to_date.strftime("%Y年 %m月 %d日") %></p>
          <p>担当者：<%= task.user.name %></p>
          <p>ステータス：<%= task.status %></p>
          <p>優先度：
            <span class="<%= "text-danger" if task.priority == "high" %>"><%= task.translate_priority %></span>
          </p>
          <div class="blog-links">
            <%= link_to task, class: 'btn btn-outline-dark me-2' do %>
              <i class="fa-solid fa-circle-info"></i> 詳細
            <% end %>
            <% if current_user == task.user %>
              <%= link_to edit_task_path(task), class: 'btn btn-info text-white me-2' do %>
                <i class="fa-solid fa-pen"></i> 編集
              <% end %>
              <%= link_to task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                <i class="fa-solid fa-trash"></i> 削除
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate incomplete_tasks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
